<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ModStation.Avalonia.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="500"
             d:DesignHeight="450"
             x:Class="ModStation.Avalonia.Views.ManageGamesView"
             x:DataType="vm:ManageGamesViewModel">

    <Grid RowDefinitions="Auto, *, Auto" ColumnDefinitions="*, Auto" Margin="10">
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Game Manager" 
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="0,10" />

        <!-- Game List -->
        <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="0,10,10,10">
            <ItemsControl ItemsSource="{Binding Games}"> 
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                            <Button Content="Manage Mods" 
                                    Command="{Binding ((vm:ManageGamesViewModel)DataContext).OpenManageModsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding}" 
                                    Width="120" />
                            <Button Content="Remove Game" 
                                    Command="{Binding ((vm:ManageGamesViewModel)DataContext).RemoveGameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding}" 
                                    Width="120" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Add Game Button -->
        <Button Grid.Row="2" Grid.ColumnSpan="2" 
                Content="Add Game" 
                Command="{Binding AddGameCommand}" 
                Width="150" 
                HorizontalAlignment="Center" 
                Margin="0,10" />
    </Grid>
</UserControl>
