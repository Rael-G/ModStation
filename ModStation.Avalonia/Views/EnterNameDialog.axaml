<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ModStation.Avalonia.Views.EnterNameDialog"
        Title="Enter Name"
        Width = "400" Height = "150"
        WindowStartupLocation="CenterOwner">

  <StackPanel Margin="10" Spacing="10">
      <TextBlock Text="Enter the name:" FontSize="14" />
      <TextBox x:Name="NameTextBox" Watermark="Name..." />
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
          <Button Content="OK" Width="75" IsDefault="True" Click="OnOkClick" />
          <Button Content="Cancel" Width="75" IsCancel="True" Click="OnCancelClick" />
      </StackPanel>
  </StackPanel>

</Window>
